@model Assignment2.WebApplication.Models.WeatherInfo
@{
    ViewBag.Title = "AddWeatherinfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Add new weather information</h2>
@using (Html.BeginForm("Create", "Maintainer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Day)
        @Html.TextBoxFor(m => m.Day, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Weather)
        @Html.TextBoxFor(m => m.Weather, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Outfit)
        @Html.TextBoxFor(m => m.Outfit, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Temperature)
        @Html.TextBoxFor(m => m.Temperature, new {@class = "form-control"})
    </div>
    <head>
        <style>
            .button {
                background-color: black;
                border: black;
                color: white;
                padding: 8px 16px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 14px;
                margin: 2px 2px;
                cursor: pointer;
                border-radius: 6px;
            }  
</style>
    </head>
    <button type= "submit" class="button">Save</button>
    <button type= "submit" class="button">Cancel</button>

}