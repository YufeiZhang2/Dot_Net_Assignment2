@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Assignment2.Database
@model DataDrivenRules
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Rule</title>

</head>

<body>
    <h2>Editor - Edit rule</h2>

    <br>

    @using (Html.BeginForm("UpdateDataDrivenRule", "Editor"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Question)
            @Html.TextBoxFor(m => m.Question, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.QuestionColumn)
            @Html.DropDownListFor(m => m.QuestionColumn,
                                                new[] {
                new SelectListItem
                {
                    Text = "Day",
                    Value = "Day"
                },
                new SelectListItem
                {
                    Text = "Weather",
                    Value = "Weather"
                },
                new SelectListItem
                {
                    Text = "Outfit",
                    Value = "Outfit"
                },
                new SelectListItem
                {
                    Text = "Temperature",
                    Value = "Temperature"
                }
                                        }, "Select Question Column", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Answer)
            @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AnswerColumn)
            @Html.DropDownListFor(m => m.AnswerColumn,
                                             new[] {
                            new SelectListItem
                            {
                                Text = "Day",
                                Value = "Day"
                            },
                            new SelectListItem
                            {
                                Text = "Weather",
                                Value = "Weather"
                            },
                            new SelectListItem
                            {
                                Text = "Outfit",
                                Value = "Outfit"
                            },
                            new SelectListItem
                            {
                                Text = "Temperature",
                                Value = "Temperature"
                            }
                                            }, "Select Answer Column", new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.CurrentStatus)
        <div class="form-group">
            <button type="submit" class="btn btn-default">Update</button>
            @Html.ActionLink("Cancel", "Index")
        </div>

    }
</body>
</html>
