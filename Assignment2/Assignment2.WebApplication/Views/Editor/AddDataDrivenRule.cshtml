@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Assignment2.Database
@model DataDrivenRules
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Data-driven Rule</title>

</head>

<body>
    <h2>Add new data-driven rule</h2>

    <br>

    @using (Html.BeginForm("AddDataDrivenRule", "Editor"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Question)
            @Html.TextBoxFor(m => m.Question, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.QuestionColumn)
            @Html.DropDownListFor(m => m.QuestionColumn,
                                      new[] {
                        new SelectListItem
                        {
                            Text = "Day",
                            Value = "Day"
                        },
                        new SelectListItem
                        {
                            Text = "Weather",
                            Value = "Weather"
                        },
                        new SelectListItem
                        {
                            Text = "Outfit",
                            Value = "Outfit"
                        },
                        new SelectListItem
                        {
                            Text = "Temperature",
                            Value = "Temperature"
                        }
                              }, "Select Question Column", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Answer)
            @Html.TextBoxFor(m => m.Answer, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.AnswerColumn)
            @Html.DropDownListFor(m => m.AnswerColumn,
                                   new[] {
                                    new SelectListItem
                                    {
                                        Text = "Day",
                                        Value = "Day"
                                    },
                                    new SelectListItem
                                    {
                                        Text = "Weather",
                                        Value = "Weather"
                                    },
                                    new SelectListItem
                                    {
                                        Text = "Outfit",
                                        Value = "Outfit"
                                    },
                                    new SelectListItem
                                    {
                                        Text = "Temperature",
                                        Value = "Temperature"
                                    }
                                  }, "Select Answer Column", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Add" class="btn btn-default" />
            @Html.ActionLink("Cancel", "Index")
        </div>
        
    }
</body>
</html>
